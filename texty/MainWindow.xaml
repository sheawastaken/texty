<Window x:Class="texty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:texty"
        mc:Ignorable="d"
        Title="texty - indev (01)" Height="480" Width="640">
        <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            
            <Button Click="New_Click" ToolTip="New">
                <TextBlock 
                    FontSize="20" 
                    TextAlignment="Center" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Text="[+]"/>
            </Button>
            
            <Button Click="Save_Click" ToolTip="Save">
                <Image Width="32" Source="/img/SaveIco.png"></Image>
            </Button>

            <Button Click="Load_Click" ToolTip="Load">
                <Image Width="32" Source="/img/LoadIco.png"></Image>
            </Button>
        </ToolBar>
    <Grid>
        <TextBox Name="TextContent" AcceptsReturn="True" Text="Get started!" TextWrapping="Wrap" Margin="5" FontFamily="Consolas"/>
    </Grid> 
        </DockPanel>
</Window>
